{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "es2015",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "es2015.promise",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "importHelpers": true,
    "rootDir": "src",
    "noImplicitAny": false,
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
}